{
  "name": "typescript-boilerplate",
  "description": "Basic setup for development with Typescript.",
  "version": "0.0.0",
  "author": "Viktor Svensson <viktor@veloxia.se> (https://www.veloxia.se)",
  "license": "MIT",
  "engines": {
    "node": ">= 12.13"
  },
  "scripts": {
    "clean": "npm run clean:dist && npm run clean:docs",
    "clean:dist": "[ ! -d dist ] || rimraf dist",
    "clean:docs": "[ ! -d docs ] || rimraf docs",
    "clean:tests": "[ ! -d coverage ] || rimraf coverage",
    "build": "npm run lint && npm run build:main && npm run build:docs",
    "build:main": "npm run clean:dist && tsc --build tsconfig.build.json",
    "build:docs": "npm run clean:docs && ./node_modules/.bin/typedoc --readme ./README.md --out docs src",
    "watch": "npm run clean:dist && tsc --build tsconfig.build.json --watch",
    "test": "npm run clean:tests && jest --coverage",
    "test:watch": "npm run clean:tests && jest --watch",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "@typescript-eslint/eslint-plugin": "^2.32.0",
    "@typescript-eslint/parser": "^2.32.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.10.0",
    "jest": "^26.0.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.1",
    "tsutils": "^3.17.1",
    "typedoc": "^0.17.6",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "tslib": "~1.10.0"
  }
}
